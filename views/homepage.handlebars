{{#each blog as |blog|}}
<div class="row mb-4 blog">
    <div class="col-md-5">
        <h2>
            <a href="/blog/{{id}}">{{name}}</a>
        </h2>
        <p>Made by {{user.username}} on {{format_date date_created}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{blog.description}}
        </p>
    </div>
    {{#if comments}}
    <h3 class="col-md">Comments</h3>
    {{#each comments as |comment|}}
    <div class="col-md">
        <p>{{comment.text}} commented by user {{comment.user_id}} on {{format_date comment.date_created}}</p>
    </div>
    {{/each}}
    {{/if}}
</div>
{{/each}}